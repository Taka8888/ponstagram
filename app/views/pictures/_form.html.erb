<p id="notice"><%=notice %></p>

<%=form_for(@picture) do |f| %>
  <%if @picture.errors.any? %>
    <div id="error_explanation">
     <%# バリデーションエラーの件数を表示します。%>
     <h2><%=@picture.errors.count %>件のエラーがあります。</h2>

     <ul>
     <%# @picture.errorsは@pictureをバリデーションした際のエラー情報です。
     # full_messagesは複数のエラーメッセージを表します。%>
     <% @picture.errors.full_messages.each do |msg| %>

      <li><%=msg %></li>
      <%end%>
     </ul>
    </div>
   <%end%>

  <%=f.label :"タイトル" %>
  <%=f.text_field :title, class: 'form-control' %>
  <br>
  <div class="field">
    <%=f.label :"画像" %>
    <%=  image_tag  @picture.avatar %>
    <%= f.file_field :avatar%>
    <%= f.hidden_field :avatar_cache %>
  </div>

  <br>
  <%=f.label :"ハッシュタグ" %>
  <%=f.text_field :content, class: 'form-control' %>
  <br>
  <%=f.submit '投稿', class: 'btn btn-primary btn-block'%>
<%end%>

<%=link_to "ポスト一覧画面に戻る", pictures_path %>
